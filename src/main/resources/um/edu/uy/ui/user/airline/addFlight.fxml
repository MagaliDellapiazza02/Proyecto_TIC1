            <TextField fx:id="txtFlightNumber" layoutX="312.0" layoutY="251.0" prefHeight="25.0" prefWidth="95.0" promptText="123" />
            <Button fx:id="btnBack" layoutX="14.0" layoutY="361.0" mnemonicParsing="false" onAction="#backButtonClicked" text="Atrás" />
            <Button fx:id="btnConfirm" layoutX="549.0" layoutY="361.0" mnemonicParsing="false" onAction="#addBtnClicked" text="Crear vuelo" />
            <Label layoutX="62.0" layoutY="167.0" text="Hora de partida:" />
            <Label layoutX="340.0" layoutY="167.0" text="Hora de llegada:" />

