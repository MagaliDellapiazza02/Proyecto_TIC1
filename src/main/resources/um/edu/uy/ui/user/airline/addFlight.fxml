<VBox prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="um.edu.uy.ui.airline.AddFlightsController">
  <children>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
         <children>
            <Label layoutX="247.0" layoutY="29.0" text="Crear vuelo">
               <font>
                  <Font size="29.0" />
               </font>
            </Label>
            <Label layoutX="62.0" layoutY="96.0" text="Código IATA de origen:" />
            <Label layoutX="340.0" layoutY="96.0" text="Código IATA de destino:" />
            <Label layoutX="169.0" layoutY="222.0" text="Matrícula de aeronave:" />
            <Label layoutX="62.0" layoutY="135.0" text="Fecha de partida:" />
            <Label layoutX="195.0" layoutY="255.0" text="Número de vuelo:" />
            <TextField fx:id="txtOriginIATA" layoutX="193.0" layoutY="92.0" prefHeight="25.0" prefWidth="95.0" />
            <TextField fx:id="txtDestinyIATA" layoutX="481.0" layoutY="92.0" prefHeight="25.0" prefWidth="95.0" />
            <DatePicker fx:id="departureDate" layoutX="162.0" layoutY="131.0" prefHeight="25.0" prefWidth="121.0" promptText="AAAA-MM-DD" />
